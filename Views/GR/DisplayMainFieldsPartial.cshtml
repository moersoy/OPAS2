  @Html.Label(Resources.Resource.MD_CurrencyType,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4 show-field">
    @Html.Action("ShowNameOfId", "CurrencyType",
          new { id = (int)ViewBag.PO.currencyTypeId })
  </div>

  @Html.Label(Resources.Resource.MD_CurrencyRate,
        Resources.Resource.MD_CurrencyRate,
