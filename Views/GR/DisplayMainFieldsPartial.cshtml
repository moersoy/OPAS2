@model OPAS2Model.GoodsReceiving

<div class="form-group">
  @Html.LabelFor(model => model.documentNo, @Resources.Resource.G_DocNo,
      htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4 show-field">
    @Model.documentNo
  </div>

  @Html.LabelFor(model => model.PurchaseOrder,
        @Resources.Resource.G_PurchaseOrder,
      htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4 show-field">
    {{ examineItem.PODocumentNo }}
  </div>
</div>

<div class="form-group">
  @Html.Label(Resources.Resource.G_Department, @Resources.Resource.G_Department,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4 show-field">
    @Html.Action("DisplayNameById", "Department", new { id = ViewBag.PO.departmentId })
  </div>

  @Html.Label(@Resources.Resource.MD_CostCenter, @Resources.Resource.MD_CostCenter,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4 show-field">
    @Html.Action("DisplayNameById", "CostCenter", new { id = ViewBag.PO.costCenterId })
  </div>
</div>

