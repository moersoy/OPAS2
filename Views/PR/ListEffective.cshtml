@model IEnumerable<OPAS2Model.PurchaseReq>

@{
  ViewBag.Title = "ListEffective";
}

<script type="text/javascript">
  var initBag = {};
  initBag.bizData = {};
</script>

<h3>@Resources.Resource.MENU_EffectivePRs</h3>

<table class="table">
  <tr>
    <th>
      @Resources.Resource.G_DocSubject
    </th>
    <th>
      @Resources.Resource.G_Department
    </th>
    <th>
      @Resources.Resource.G_User
    </th>
    <th>
      @Resources.Resource.G_CreateTime
    </th>
    <th>@Resources.Resource.G_Operations</th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.reason)
      </td>
      <td>
        @Html.Action("DisplayNameById", "Department", new { id = item.departmentId })
      </td>
      <td>
        @Html.Action("DisplayNameById", "User", new { id = item.creatorUserId })
      </td>
      <td>
        @item.createTime.ToString("yyyy/MM/dd")
      </td>
      <td>
        @Html.ActionLink(Resources.Resource.G_CreatePO, "CreateFromPR", "PO", 
          new { purchaseReqId = item.purchaseReqId }, null) |
        @Html.ActionLink(Resources.Resource.G_ClosePR, "Close", 
          new { purchaseReqId = item.purchaseReqId })
      </td>
    </tr>
  }

</table>
