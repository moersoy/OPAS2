<div class="form-group">
  @Html.LabelFor(model => model.invoiceNo,
        Resources.Resource.G_InvoiceNo,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-10">
    <input name="reason" class="form-control" style="max-width: 752px;"
           v-model="newItem.invoiceNo" />
  </div>
</div>

<div class="form-group">
  @Html.LabelFor(model => model.isDownPayment,
        @Resources.Resource.G_IsDownPayment,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-1">
    <el-switch v-model="newItem.isDownPayment" style="top: 4px;"
               on-text="是/Y"
               off-text="否/N"
               on-color="LimeGreen"
               off-color="#B4B4B4">
    </el-switch>
  </div>

  @Html.LabelFor(model => model.isNormalPayment,
        @Resources.Resource.G_IsNormalPayment,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-1">
    <el-switch v-model="newItem.isNormalPayment" style="top: 4px;"
               on-text="是/Y"
               off-text="否/N"
               on-color="LimeGreen"
               off-color="#B4B4B4">
    </el-switch>
  </div>

  @Html.LabelFor(model => model.isImmediatePayment,
        @Resources.Resource.G_IsImmediatePayment,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-1">
    <el-switch v-model="newItem.isImmediatePayment" style="top: 4px;"
               on-text="是/Y"
               off-text="否/N"
               on-color="LimeGreen"
               off-color="#B4B4B4">
    </el-switch>
  </div>

  @Html.LabelFor(model => model.isAdvancePayment,
        @Resources.Resource.G_IsAdvancePayment,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-1" style="padding-left: 0px;">
    <el-switch v-model="newItem.isAdvancePayment" style="top: 4px;"
               on-text="是/Y"
               off-text="否/N"
               on-color="LimeGreen"
               off-color="#B4B4B4">
    </el-switch>
  </div>
</div>

<div class="form-group">
  @Html.LabelFor(model => model.description, @Resources.Resource.MD_Description,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-10">
    <textarea name="description" class="form-control" style="max-width: 752px;"
              v-model="newItem.description"></textarea>
  </div>
</div>

