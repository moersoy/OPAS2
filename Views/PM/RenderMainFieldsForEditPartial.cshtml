@model OPAS2Model.Payment

<div class="form-group">
  @Html.LabelFor(model => model.documentNo, @Resources.Resource.G_DocNo,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4 show-field">
    @Resources.Resource.G_NotAvailableNow
  </div>

  @Html.Label(@Resources.Resource.G_PurchaseOrder,
        @Resources.Resource.G_PurchaseOrder,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4">
    @Html.Editor("PODocumentNo",
        new
        {
          htmlAttributes = new Dictionary<string, object> {
            { "class","form-control" } ,
            { "v-model","newItem.PODocumentNo" },
            { "readonly",true },
          }
        })
  </div>
</div>

<div class="form-group">
  @Html.Label(Resources.Resource.G_Department, @Resources.Resource.G_Department,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4 show-field">
    @Html.Action("DisplayNameById", "Department", new { id = ViewBag.PO.departmentId })
  </div>

  @Html.Label(@Resources.Resource.MD_CostCenter, @Resources.Resource.MD_CostCenter,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4 show-field">
    @Html.Action("DisplayNameById", "CostCenter", new { id = ViewBag.PO.costCenterId })
  </div>
</div>

<div class="form-group">
  @Html.LabelFor(model => model.reason, "* " + @Resources.Resource.G_Reason,
      htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4">
    <input name="reason" class="form-control" v-model="newItem.reason" required />
  </div>

  @Html.LabelFor(model => model.applicantName,
        Resources.Resource.G_ApplicantName,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4">
    <input name="reason" class="form-control" v-model="newItem.applicantName" />
  </div>
</div>

