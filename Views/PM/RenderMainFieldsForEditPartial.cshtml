<div class="form-group">
  @Html.LabelFor(model => model.SWIFTCode,
        Resources.Resource.G_SWIFTCode,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4">
    <input name="reason" class="form-control" v-model="newItem.SWIFTCode" />
  </div>
</div>

<div class="form-group">
  @Html.Label(Resources.Resource.G_PaymentAreaType, "* " + @Resources.Resource.G_PaymentAreaType,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4">
    <select v-model="newItem.paymentAreaType" class="form-control" required>
      <option v-for="option in masterData.paymentAreaTypes" v-bind:value="option.id">
        {{ option.name }}
      </option>
    </select>
  </div>

  @Html.Label(Resources.Resource.G_PaymentCurrencyType, "* " + @Resources.Resource.G_PaymentCurrencyType,
        htmlAttributes: new { @class = "control-label col-md-2" })
  <div class="col-md-4">
    <select v-model="newItem.paymentCurrencyType" class="form-control" required>
      <option v-for="option in masterData.paymentCurrencyTypes" v-bind:value="option.id">
        {{ option.name }}
      </option>
    </select>
  </div>

</div>

