@model IEnumerable<OPAS2Model.CostElementType>

@{
  ViewBag.Title = "Index";
}

<h2>@Resources.Resource.MD_CostElementType</h2>

<p>
  @Html.ActionLink(@Resources.Resource.G_Create, "Create")
</p>
<table class="table">
  <tr>
    <th>
      @Resources.Resource.G_Name
    </th>
    <th>
      @Resources.Resource.MD_EnglishName
    </th>
    <th>
      @Resources.Resource.MD_Description
    </th>
    <th>操作</th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.englishName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.description)
      </td>
      <td>
        @Html.ActionLink(Resources.Resource.G_Edit, "Edit", 
          new { id = item.costElementTypeId })
      </td>
    </tr>
  }

</table>
