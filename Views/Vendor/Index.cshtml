@model IEnumerable<OPAS2Model.Vendor>

@{
  ViewBag.Title = "Index";
}

<h2>@Resources.Resource.MENU_Vendors</h2>

<p>
  @Html.ActionLink(@Resources.Resource.G_Create, "Create")
</p>
<table class="table table-condensed">
  <tr>
    <th>
      @Resources.Resource.G_Code
    </th>
    <th>
      @Resources.Resource.MD_ChineseName
    </th>
    <th>
      @Resources.Resource.MD_EnglishName
    </th>
    <th>
      @Resources.Resource.G_ContactPerson / @Resources.Resource.G_Phone
    </th>
    <th>@Resources.Resource.G_Operations</th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.vendorNo)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.chineseName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.englishName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.contactPerson) / 
        @Html.DisplayFor(modelItem => item.contactPersonTel)
      </td>
      <td>
        @Html.ActionLink(Resources.Resource.G_Edit, 
          "Edit", new { id = item.vendorId }) |
        @Html.ActionLink(Resources.Resource.G_VendorBankAccount,
          "Index" , "VendorBank", new { vendorId = item.vendorId },null) 
      </td>
    </tr>
  }

</table>
