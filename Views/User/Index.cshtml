@model IEnumerable<EnouFlowOrgMgmtLib.UserDTO>

@{
  ViewBag.Title = "Index";
}

<h2>@Resources.Resource.G_User</h2>

<p>
  @Html.ActionLink(@Resources.Resource.G_Create, "Create")
</p>
<table class="table">
  <tr>
    <th>
      @Resources.Resource.G_Name
    </th>
    <th>
      @Resources.Resource.MD_EnglishName
    </th>
    <th>
      @Resources.Resource.G_Code
    </th>
    <th>
      @Resources.Resource.G_Department
    </th>
    <th>
      @Resources.Resource.G_Email
    </th>
    <th>
      @Resources.Resource.G_LogonName
    </th>
    <th>
      @Resources.Resource.G_OfficeTel
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.englishName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.code)
      </td>
      <td>
        @Html.Action("ShowFirstDepartment", new { id = item.userId })
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.email)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.logonName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.officeTel)
      </td>
      <td>
        @Html.ActionLink(Resources.Resource.G_Edit,
        "Edit", new { id = item.guid })
      </td>
    </tr>
  }

</table>
