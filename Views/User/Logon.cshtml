@{
  ViewBag.Title = Resources.Resource.MENU_Logon;
  Layout = "~/Views/Shared/_Layout-Logon.cshtml";
}

<h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm("Logon", "User"))
{
  @Html.AntiForgeryToken()


  <div class="form-group row">
    @Html.Label("* " + Resources.Resource.G_LogonName,
        htmlAttributes: new Dictionary<string, object> {
          { "class", "control-label col-md-offset-3 col-md-2 text-right" } ,
          { "style", "padding-top: 10px;"}
        })
    <div class="col-md-7">
      @Html.TextBox("logonName", (string)ViewBag.logonName, new Dictionary<string, object> {
            { "class", "form-control" },
            { "style", "max-width: 200px;" },
            { "required", "true" } })
    </div>
  </div>

  <div class="form-group row">
    @Html.Label("* " + Resources.Resource.G_Password,
        htmlAttributes: new Dictionary<string, object> {
          { "class", "control-label col-md-offset-3 col-md-2 text-right" } ,
          { "style", "padding-top: 10px;"}
        })
    <div class="col-md-7">
      @Html.Password("logonPassword", "", new Dictionary<string, object> {
            { "class", "form-control" },
            { "style", "max-width: 200px;" },
            { "required", "true" } })
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-offset-5 col-md-7">
      <input type="submit" value="@Resources.Resource.MENU_Logon" class="btn btn-primary" />
      <span style="display:inline-block; width: 5px;"></span>
      <input type="reset" value="@Resources.Resource.G_Reset" class="btn" />
    </div>
  </div>
}