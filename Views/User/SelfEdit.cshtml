@model EnouFlowOrgMgmtLib.UserDTO
@{
  var defaultLabelAttributes = new { @class = "control-label col-md-2" };
  var defaultEditorAttributes = new { htmlAttributes = 
                                  new { @class = "form-control" }
                                };
}

<h2>@Resources.Resource.G_Edit</h2>

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <div class="form-horizontal">
    <h4>@Resources.Resource.G_MyAccount</h4>
    <hr />
    @Html.HiddenFor(model => model.guid)

    <div class="form-group">
      @Html.Label("* " + Resources.Resource.G_Department,
        htmlAttributes: defaultLabelAttributes)
      <div class="col-md-10">
        @Html.TextBox("departmentId", (object)ViewBag.department.name, new
           {
             @class = "form-control",
             @readonly = "true"
           }
         )
      </div>
    </div>

    <div class="form-group">
      @Html.Label("* " + Resources.Resource.G_UserPosition,
        htmlAttributes: defaultLabelAttributes)
      <div class="col-md-10">
        @Html.DropDownList("userPosition", 
          (SelectList)ViewBag.userPositionToDepartmentSelectList,
          Resources.Resource.G_PleaseChoose, new {
            @class = "form-control",
            @readonly = "true",
            value = ViewBag.userPosition
          })
      </div>
    </div>

    <div class="form-group">
      @Html.Label("* " + Resources.Resource.MD_CostCenter,
        htmlAttributes: defaultLabelAttributes)
      <div class="col-md-10">
        @Html.TextBox("costCenterName", (object)ViewBag.costCenterName, new
           {
             @class = "form-control",
             @readonly = "true"
           }
         )
      </div>
    </div>

    <div class="form-group">
      @Html.Label(Resources.Resource.G_Password,
        htmlAttributes: defaultLabelAttributes)
      <div class="col-md-10">
        @Html.Password("logonPassword", "", new Dictionary<string, object> {
            { "class", "form-control" }})
      </div>
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.email, Resources.Resource.G_Email, 
        htmlAttributes: defaultLabelAttributes)
      <div class="col-md-10">
        @Html.EditorFor(model => model.email, defaultEditorAttributes)
      </div>
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.officeTel, Resources.Resource.G_OfficeTel, 
        htmlAttributes: defaultLabelAttributes)
      <div class="col-md-10">
        @Html.EditorFor(model => model.officeTel, defaultEditorAttributes)
      </div>
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.personalTel, Resources.Resource.G_PersonalTel, 
        htmlAttributes: defaultLabelAttributes)
      <div class="col-md-10">
        @Html.EditorFor(model => model.personalTel, defaultEditorAttributes)
      </div>
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.personalMobile, Resources.Resource.G_PersonalMobile, 
        htmlAttributes: defaultLabelAttributes)
      <div class="col-md-10">
        @Html.EditorFor(model => model.personalMobile, defaultEditorAttributes)
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="@Resources.Resource.G_Save" class="btn btn-default" />
      </div>
    </div>
  </div>
}

<div>
  @Html.ActionLink(@Resources.Resource.G_BackToList, "Index")
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
