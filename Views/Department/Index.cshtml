@model IEnumerable<EnouFlowOrgMgmtLib.DepartmentDTO>

@{
  ViewBag.Title = "Index";
}

<h2>@Resources.Resource.G_Department</h2>

<p>
  @Html.ActionLink(@Resources.Resource.G_Create, "Create")
</p>
<table class="table">
  <tr>
    <th>
      @Resources.Resource.G_Name
    </th>
    <th>
      @Resources.Resource.MD_EnglishName
    </th>
    <th>
      @Resources.Resource.G_Code
    </th>
    <th>
      @Resources.Resource.G_IndexNumber
    </th>
    <th>
      @Resources.Resource.G_CreateTime
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
      {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.englishName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.code)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.indexNumber)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.createTime)
      </td>
      <td>
        @Html.ActionLink(Resources.Resource.G_Edit, 
        "Edit", new { id=item.guid })
      </td>
    </tr>
  }

</table>
