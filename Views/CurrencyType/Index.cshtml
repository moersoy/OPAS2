@model IEnumerable<OPAS2Model.CurrencyType>

@{
  ViewBag.Title = "Index";
}

<h2>@Resources.Resource.MD_CurrencyType</h2>

<p>
  @Html.ActionLink(@Resources.Resource.G_Create, "Create")
</p>
<table class="table">
  <tr>
    <th>
      @Resources.Resource.G_Name
    </th>
    <th>
      @Resources.Resource.G_ShortName
    </th>
    <th>
      @Resources.Resource.G_Symbol
    </th>
    <th>
      @Resources.Resource.G_LatestRate
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.shortName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.symbol)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.latestRate)
      </td>
      <td>
        @Html.ActionLink(Resources.Resource.G_Edit, "Edit", 
          new { id = item.currencyTypeId })
      </td>
    </tr>
  }

</table>
