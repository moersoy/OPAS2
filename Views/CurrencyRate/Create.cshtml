@model OPAS2Model.CurrencyHistoryRecord

@{
  ViewBag.Title = "Create";
}

<h2>@Resources.Resource.G_Create</h2>


@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <div class="form-horizontal">
    <h4>@Resources.Resource.MD_CurrencyRate</h4>
    <hr />

    <div class="form-group">
      @Html.Label(Resources.Resource.MD_CurrencyType, 
        htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.DropDownList("currencyTypeId", (SelectList)ViewBag.selectList, 
          "请选择/Choose one", new { @class = "form-control", required = "true" })
      </div>
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.effectiveRate, 
        "*" + Resources.Resource.G_LatestRate , 
        htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.EditorFor(model => model.effectiveRate, 
          new { htmlAttributes = new { @class = "form-control", type="number", required = "true" } })
      </div>
    </div>

    <div class="form-group">
      @Html.LabelFor(model => model.effectiveDateFrom,
        "*" + @Resources.Resource.G_EffectiveDate, 
        htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.EditorFor(model => model.effectiveDateFrom, 
          new { htmlAttributes = new { @class = "form-control", type = "date", required = "true" } })
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="@Resources.Resource.G_Create" class="btn btn-default" />
      </div>
    </div>
  </div>
}

<div>
  @Html.ActionLink(@Resources.Resource.G_BackToList, "Index")
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
