@model EnouFlowOrgMgmtLib.Role

@{
  ViewBag.Title = "AddBelongedUser";
}

<h2>@Resources.Resource.G_AddBelongedUser</h2>


@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <div class="form-horizontal">
    <h4>@Resources.Resource.MENU_Roles - @Model.name</h4>
    <hr />
    @Html.HiddenFor(model => model.roleId)

    <div class="form-group">
      @Html.Label(@Resources.Resource.G_User,
        htmlAttributes: new { @class = "control-label col-md-2" })

      <div class="col-md-10">
        @Html.DropDownList("userGuid", (SelectList)ViewBag.userDTOs,"请选择 / Choose",
        new Dictionary<string, object> {
              { "class","form-control" } ,
              { "required","true" } }
        )
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="@Resources.Resource.G_Save" 
               class="btn btn-default" />
      </div>
    </div>
  </div>
}

<div>
  @Html.ActionLink(@Resources.Resource.G_BackToList, "Index")
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
